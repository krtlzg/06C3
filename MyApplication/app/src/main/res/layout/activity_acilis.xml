<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.asus.bendevarm.activity.AcilisActivity">

    <ImageButton
        android:id="@+id/imageButtonkurumsal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_location_city" />

    <TextView
        android:id="@+id/textViewkurumsal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic|bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="KURUMSAL GİRİŞ" />

    <ImageButton
        android:id="@+id/imageButtonbireysel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_account_circle" />

    <TextView
        android:id="@+id/textViewbireysel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textStyle="italic|bold"
        android:text="GÖNÜLLÜ GİRİŞ" />
</LinearLayout>
