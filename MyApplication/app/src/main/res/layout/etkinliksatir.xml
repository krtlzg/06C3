<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/cardview"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgViewLogo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@android:color/transparent" />


            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewKurumAdi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtViewEtkinlikAdi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtViewYer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtViewTarih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtDestekSayisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnDestekle"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:text="Destekle"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:focusable="false"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/imgDurum"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@android:color/transparent" />

</LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>




